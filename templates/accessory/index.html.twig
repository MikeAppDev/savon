{% extends 'base.html.twig' %}

{% block title %}Accessory index{% endblock %}

{% block body %}
    <h1>Accessory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Accessoires</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for accessory in accessories %}
            <tr>
                <td>{{ accessory.id }}</td>
                <td>{{ accessory.name }}</td>
                <td>{{ accessory.description }}</td>
                <td>{{ accessory.price }}</td>
                <td><img class="border border-secondary rounded" style="width:10rem;" src={{accessory.picture}}></td> 

                <td>
                    <a href="{{ path('app_accessory_show', {'id': accessory.id}) }}">show</a>
                    <a href="{{ path('app_accessory_edit', {'id': accessory.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_accessory_new') }}">Create new</a>
{% endblock %}
